{
    "name": "hexlet/code",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "symfony/var-dumper": "^5.4",
        "phpstan/phpstan-phpunit": "^1.4",
        "phpstan/extension-installer": "^1.4"
    },
    "require": {
        "slim/slim": "^4.14",
        "slim/psr7": "^1.6",
        "php-di/php-di": "6.4.0",
        "slim/http": "^1.3",
        "slim/twig-view": "^3.4",
        "twig/twig": "3.11.0",
        "vlucas/valitron": "^1.4",
        "nesbot/carbon": "^2.72",
        "slim/flash": "^0.4.0",
        "illuminate/support": "^8.83",
        "guzzlehttp/guzzle": "^7.9",
        "imangazaliev/didom": "^2.0"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12",
        "test": "phpunit tests",
        "phpstan": "phpstan --memory-limit=256M --ansi analyse -c ./phpstan.neon"
    },
    "config": {
        "platform": {
            "php": "7.4.33"
        },
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
