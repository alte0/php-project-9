{% extends 'layout.twig' %}

{% block title %}Анализатор страниц{% endblock %}

{% block content %}
    <div class="container-lg mt-3">
        {% if url.getId() %}
            <h1>Сайт: {{ url.getName() }}</h1>
            <div class="table-responsive">
                <table class="table table-bordered table-hover text-nowrap" data-test="url">
                    <tbody>
                    <tr>
                        <td>ID</td>
                        <td>{{ url.getId() }}</td>
                    </tr>
                    <tr>
                        <td>Имя</td>
                        <td>{{ url.getName() }}</td>
                    </tr>
                    <tr>
                        <td>Дата создания</td>
                        <td>{{ url.getCreateAt() }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {% endif %}
        <h2 class="mt-5 mb-3">Проверки</h2>
        <form class="pb-3" method="post" action="/urls/1/checks">
            <input type="submit" class="btn btn-primary" value="Запустить проверку">
            {#            Страница успешно проверена #}
        </form>
        <table class="table table-bordered table-hover" data-test="checks">
            <thead>
            <tr>
                <th>ID</th>
                <th>Код ответа</th>
                <th>h1</th>
                <th>title</th>
                <th>description</th>
                <th>Дата создания</th>
            </tr>
            </thead>
            <tbody>
            {% for check in checks %}
                <tr>
                    <td>{{ check.id }}</td>
                    <td>{{ check.code_response }}</td>
                    <td class="text-break">{{ check.h1_text }}</td>
                    <td class="text-break">{{ check.title_text }}</td>
                    <td class="text-break">{{ check.description_text }}</td>
                    <td>{{ check.create_at }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
